---
interface Props {
    src: string;
    caption: string;
    alt?: string;
}

const { src, caption, alt } = Astro.props;
---

<figure class="figure-container">
    <div class="img-wrapper">
        <img src={src} alt={alt || caption} class="preview-trigger" />
    </div>
    <figcaption>{caption}</figcaption>
</figure>

<dialog class="image-modal">
    <div class="modal-content">
        <img src={src} alt={alt || caption} />
        <p>{caption}</p>
        <form method="dialog">
            <button class="close-btn">&times;</button>
        </form>
    </div>
</dialog>

<script>
    // 处理所有预览组件的逻辑
    const figures = document.querySelectorAll('.figure-container');

    figures.forEach((figure) => {
        const img = figure.querySelector('.preview-trigger');
        const dialog = figure.nextElementSibling as HTMLDialogElement;

        // 点击图片打开弹窗
        img?.addEventListener('click', () => {
            dialog.showModal();
            document.body.style.overflow = 'hidden'; // 防止背景滚动
        });

        // 点击弹窗背景关闭
        dialog?.addEventListener('click', (e) => {
            if (e.target === dialog) {
                dialog.close();
            }
        });

        // 恢复滚动
        dialog?.addEventListener('close', () => {
            document.body.style.overflow = '';
        });
    });
</script>

<style lang="scss">
  :global(body) {
    counter-reset: figureCounter;
  }

  .figure-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    
    margin: 0;

    width: 100%;
    
    counter-increment: figureCounter;

    .img-wrapper {
      cursor: zoom-in;
      width: 100%;
      display: flex;
      justify-content: center;
    }

    img {
      height: auto;
      border-radius: 6px;
      border: 1px solid #eee;
      transition: opacity 0.2s;

      width: 100%;
      
      @media (min-width: 768px) {
        width: 50%;
      }

      &:hover { opacity: 0.9; }
      
    }

    figcaption {
      margin-top: 8px;
      color: gray;
      font-family: Arial, sans-serif;
      font-size: 0.8rem;
      text-align: center;

      &::before {
        content: "FIG " counter(figureCounter) ". ";
        font-weight: bold;
      }
    }
  }

  /* 弹窗样式 */
  .image-modal {
    padding: 0;
    border: none;
    background: transparent;
    max-width: 100vw;
    max-height: 100vh;
    outline: none;

    &::backdrop {
      background: rgba(0, 0, 0, 0.9);
      backdrop-filter: blur(4px);
    }

    .modal-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 100vw;
      height: 100vh;
      padding: 20px;
      box-sizing: border-box;

      img {
        max-width: 100%;
        max-height: 80vh;
        object-fit: contain;
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
      }

      p {
        color: white;
        margin-top: 1rem;
        font-size: 0.9rem;
      }
    }

    .close-btn {
      position: fixed;
      top: 20px;
      right: 20px;
      background: rgba(255,255,255,0.2);
      border: none;
      color: white;
      font-size: 2rem;
      width: 44px;
      height: 44px;
      border-radius: 50%;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }
</style>