---
const {post} = Astro.props;
const frontmatter = post.frontmatter;
---

<style lang="scss">
    .chaos-blog-post {
      display: grid;
      grid-template-columns: subgrid;
      grid-column: 1/-1;
      align-items: start;

      padding: 6px 0;

      &-visible{
        display: grid;
        grid-template-columns: subgrid;
        grid-column: 1/-1;
      }

      &-date{
        grid-column: 1/4;
      }

      &-title{
        grid-column: 4/-1;

        &:hover{
          text-decoration: underline;
          text-decoration-style: wavy;
          text-underline-offset: 4px;
        }
      }
    }

    @media (max-width: 768px) {
    .chaos-blog-post-date{
      grid-column: 1/10;
    }
      .chaos-blog-post-title{
        grid-column: 10/-1;
      }
    }

</style>

<div class="chaos-blog-post">
    <span class="chaos-blog-post-date">{frontmatter.pubDate.toString().slice(0,10)}</span>
    <a class="chaos-blog-post-title" href={post.url}>{frontmatter.title}</a>
</div>
